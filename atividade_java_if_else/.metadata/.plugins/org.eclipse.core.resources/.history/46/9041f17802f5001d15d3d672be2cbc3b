package principal;

public class Program {

	public static void main(String[] args) {
		
		String opcao = "Quarta-feira";
		int opcao2 = 4;
		
		switch (opcao) {
		case "Quarta-feira": // dois pontos refere a "entao"
			System.out.println("O dia selecionado é quarta-feira");
			break;
		
		case "Quinta-feira":
			System.out.println("O dia selecionado é quinta-feira");
			
		case "Sexta-feira":
			System.out.println("Sextou!!!");
			
		default:
			System.out.println("Não corresponde a um dia da semana");
			break;
		}
		

	}

}

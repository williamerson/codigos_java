package principal;

import java.util.Random;

public class Program1 {

	public static void main(String[] args) {
		
		Random aleatorio = new Random();
		
		
		int valor1 = aleatorio.nextInt(6) + 1 ;
	    System.out.println("Segundo número gerado: " + valor1);
		int valor2 = aleatorio.nextInt(6) + 1 ;
	    System.out.println("Segundo número gerado: " + valor2);
	    
	    int valor3 = aleatorio.nextInt(6) + 1 ;
	    System.out.println("Terceiro gerado: " + valor3);
	    
	    int soma = (valor1+valor2+valor3);
	    System.out.println("A soma dos valores e de: " + soma + " \n ");
		
	    
	    if(valor1 == valor2 && valor1 == valor3 && valor2 == valor3) {
	    	
	    	System.out.println("Voce é muito sortudo, acaba de ganhar 6 pontos de bônus!!");
	    		
	    	if(soma + 6 >= 15) {
	    			System.out.println("E com a soma do bônus e do dados passou de 15 pontos, Parabéns você ta rico!!!!!!");
	    			System.exit(0);
	    	}
	    	else{
	    		System.out.println("Mas infelismente não atingil um valor maior que 15, e perdeu tudo!");
	    		System.exit(0);
	    		
	    	}
	    }
	    
	    
		if (valor1 == valor2 || valor1 == valor3 || valor2 == valor3) {
		   	
			System.out.println("Parabéns, voce acaba de ganhar 2 pontos de bônus!!! \n");
		   	
		   	if(soma + 2 >= 15) {
    			System.out.println("E com a soma do bônus e do dados passou de 15 pontos, Parabéns você ta rico!!!!!!");
    			System.exit(0);
		   	}
		   	if(soma + 2 < 15) {
		   		System.out.println("Mas infelismente não atingil um valor maior que 15, e perdeu tudo!");
		   		System.exit(0);
		   	}
		   	
		}
		else{
	    	System.out.println("Tente novamente!!!");
	    }

	}

}


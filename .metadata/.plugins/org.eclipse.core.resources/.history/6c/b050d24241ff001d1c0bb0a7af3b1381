package principal;

public class atividade_2 {
	
//	2) Faça um programa, com uma função que necessite de três argumentos, e que forneça a soma desses três argumentos
    public static int somar(int num1, int num2, int num3) {
        int soma = num1 + num2 + num3;
        return soma;
    }

    public static void main(String[] args) {
        int argumento1 = 2;
        int argumento2 = 4;
        int argumento3 = 6;

        int resultado = somar(argumento1, argumento2, argumento3);
        System.out.println("A soma dos três argumentos é: " + resultado);
    }
}
package principal;

public class atividade_3 {
    public static double calcularValorVenda(double valorDoProduto, double lucroProduto) {
        double taxaLucro = lucroProduto / 100.0;
        double valorVenda = valorDoProduto * (1 + taxaLucro);
        return valorVenda;
    }

    public static void main(String[] args) {
        double valorDoProduto = 10.00;
        double lucroProduto = 10.0;

        double valorVenda = calcularValorVenda(valorDoProduto, lucroProduto);
        System.out.println("O valor de venda do produto é: " + valorVenda);
    }
}